{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "types": ["node"],
    "rootDir": "./src",
    "importHelpers": true,
    "lib": ["es2018", "dom"],
    "jsx": "react"
  },
  "exclude": ["node_modules", "dist", "application-ui", "marketing", "config"]
}
